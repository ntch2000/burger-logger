<div class="jumbotron bgColor">
  <img src="/assets/images/hamburger-31775_640.png" class="rounded mx-auto d-block" alt="Picture of a hamburger">
  <h1 class="text-center">Eat-Da-Burger!</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md">
      <h2>Burgers to be Devoured!</h2>
      <ul>
        {{#each burger}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md">
      <h2>Devoured Burgers!</h2>
      <ul>
        {{#each burger}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-md-6 text-center">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="brg">Burger Name:</label>
          <input class="form-control" type="text" id="brg" name="burger_name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>